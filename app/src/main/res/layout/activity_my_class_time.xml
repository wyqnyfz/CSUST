<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyClassTime">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:background="#fff"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_m2_week"
                android:gravity="center"
                android:text="第几周"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_m2_name"
                android:gravity="center"
                android:layout_weight="1"
                android:text="姓名"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_m2_class"
                android:gravity="center"
                android:layout_weight="1"
                android:text="班级"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_m2_exit"
                android:padding="3dp"
                android:background="@drawable/bg_f4_1"
                android:gravity="center"
                android:text="退出登录"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:background="#08A3C9"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:gravity="center"
                    android:text="课表"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:text="周一"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:text="周二"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:text="周三"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:text="周四"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:text="周五"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:text="周六"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:text="周日"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--节-->
            <LinearLayout
                android:background="#fff"
                android:orientation="vertical"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="600dp">
                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第1节"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第2节"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第3节"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第4节"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第5节"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第6节"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第7节"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第8节"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第9节"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第10节"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />

            </LinearLayout>
            <!--课-->
            <LinearLayout
                android:id="@+id/ll_all"
                android:background="@drawable/bg"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_m2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="有问题或者建议可以联系我，QQ：2798141829"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="版本：1.0 || 2020.5.20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>